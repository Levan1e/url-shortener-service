{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug URL Shortener",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/shortener",
            "args": ["-storage=postgres"],
            "cwd": "${workspaceFolder}",
            "env": {
                "CONFIG_PATH": "internal/config/config.yaml"
            },
            "showLog": true
        }
    ]
}
